<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-4">
    <section class="user-info">
      <%= image_tag @user.avatar.url(:medium) %>
      <br />
      <%= @user.name %>
      <br />
      <% if current_user == @user %>
        <%= link_to "Edit Profile", edit_user_registration_path(current_user) %>
      <% end %>
    </section>
  </div>

  <div class="col-md-8">
  	<ol class="user-ideas">
      <%= render @ideas %>
  	</ol>
  </div>
</div>