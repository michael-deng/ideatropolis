<% provide(:title, "Edit Idea") %>

<%= form_for(@idea) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.text_field :title, placeholder: @idea.title %>
	<br />
  <%= f.text_area :content, placeholder: @idea.content %>
  <br />
  <%= f.submit "Update Idea", class: "btn btn-sm" %>
<% end %>