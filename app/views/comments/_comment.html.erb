<li class="comment-entry" id="<%= dom_id comment %>">
  <%= link_to gravatar_for(comment.user), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="timestamp">
    posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  <br />
  <span class="content"><%= best_in_place comment, :content, :as => :textarea, :path => idea_comment_path(comment.idea, comment) %></span>
  <br />
  <% if current_user == comment.user %>
    <%= link_to "Edit", edit_idea_comment_path(comment.idea, comment) %>
    <%= link_to "Delete", [comment.idea, comment], method: :delete,
                                       data: { confirm: "You sure?" } %>
  <% end %>
  <hr>
</li>